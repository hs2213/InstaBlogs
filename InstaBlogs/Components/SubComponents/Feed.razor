@if (_blogs.Any())
{
    <div class="reel-with-arrows">
        <Reel OnClicked="OnBlogClicked" BlogToShow="@_blogToShow" @ref="_reel"/>
        <div class="arrows">
            <i class="bi bi-arrow-up-circle-fill" @onclick="OnArrowUpPressed"></i>
            <i class="bi bi-arrow-down-circle-fill" @onclick="OnArrowDownPressed"></i>
        </div>
    </div>
}